@using EyeCTforParticipation.Models;

@{
    UserModel user = (UserModel)Session["user"];
}

<header id="header">
    <div class="header-content">
        <h1>EyeCT for Participation</h1>
        @if (user != null)
        {
            <div class="user">
                <button class="button open_chat"><i class="material-icons">&#xE0B7;</i>Chat</button>
                <p>@user.Name</p>
                <a href="/user/logout" class="primary_button">Uitloggen</a>
            </div>
            <div class="zoom">
                <button class="button zoom_out"><i class="material-icons">&#xE900;</i></button>
                <div class="zoom_level">@(user.Zoom)%</div>
                <button class="button zoom_in"><i class="material-icons">&#xE8FF;</i></button>
            </div>
        }
        else
        {
            <div class="user">
                <a href="register.html" class="button">Registreren</a>
                <button class="primary_button login">Inloggen</button>
            </div>
        }
        <nav>
            <ul>
                @if (ViewBag.Nav != null)
                {
                    foreach (NavModel nav in ViewBag.Nav)
                    {
                        <li@(nav.Current ? " class=current" : "")>
                            <a href="@nav.Href">@nav.Title</a>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</header>
@if (user != null)
{
    <script type="text/javascript">
    var zoom = @user.Zoom;
    var userId = @user.Id;
    </script>
    <script src="/js/zoom.js" type="text/javascript"></script>
}

